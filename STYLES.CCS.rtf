/* Global Styles */\
* \{\
    margin: 0;\
    padding: 0;\
    box-sizing: border-box;\
\}\
\
body \{\
    font-family: 'Roboto', sans-serif;\
    background-color: #f4f4f9;\
    color: #333;\
\}\
\
.container \{\
    width: 80%;\
    margin: 0 auto;\
    max-width: 1200px;\
\}\
\
h1, h2, h3 \{\
    font-family: 'Poppins', sans-serif;\
    color: #333;\
\}\
